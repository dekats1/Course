<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="157.0" prefWidth="830.0" styleClass="product-cell"
            stylesheets="@../../Styles/Product.css" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.jms.salon.Controllers.Product.ProductSellController">
    <children>
        <HBox spacing="20" styleClass="product-content" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <children>
                <VBox prefWidth="350" spacing="8" styleClass="product-info">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="field-label" text="Название:"/>
                            <Label fx:id="nameLabel" styleClass="field-value" wrapText="true"/>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="field-label" text="Категория:"/>
                            <Label fx:id="categoryLabel" styleClass="field-value"/>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="field-label" text="Описание:"/>
                            <Label fx:id="descriptionLabel" styleClass="field-value" wrapText="true"/>
                        </HBox>
                    </children>
                </VBox>

                <VBox alignment="CENTER_RIGHT" spacing="8" styleClass="product-numbers">
                    <children>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Label styleClass="field-label" text="Цена:"/>
                            <Label fx:id="priceLabel" styleClass="field-value-bold"/>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Label styleClass="field-label" text="Себестоимость:"/>
                            <Label fx:id="costLabel" styleClass="field-value"/>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Label styleClass="field-label" text="Количество:"/>
                            <Label fx:id="quantityLabel" styleClass="field-value-bold"/>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Label styleClass="field-label" text="Продажи:"/>
                            <Label fx:id="salesLabel" styleClass="field-value"/>
                        </HBox>
                    </children>
                </VBox>

                <VBox alignment="CENTER_RIGHT" spacing="10" styleClass="product-actions">
                    <children>
                        <Button fx:id="editButton" styleClass="edit-button" text="Редактировать"/>
                        <Button fx:id="deleteButton" styleClass="delete-button" text="Удалить"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
